{
    "name": "mtasa-lua-utils",
    "version": "0.2.3",
    "description": "Prepares Typescript files for Lua compilation for MTASA",
    "author": "Anatolii Titov <a@toliak.ru>",
    "keywords": [
        "mtasa",
        "transformer",
        "mtasa-typescript",
        "lua",
        "linting",
        "typescript"
    ],
    "license": "MIT",
    "homepage": "https://github.com/mtasa-typescript/mtasa-lua-utils",
    "bugs": "https://github.com/mtasa-typescript/mtasa-lua-utils/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/mtasa-typescript/mtasa-lua-utils.git"
    },
    "type": "commonjs",
    "scripts": {
        "prebuild": "convert-schema",
        "build": "tsc --build",
        "watch": "tsc --build --watch",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prettier": "prettier --check .",
        "eslint": "eslint --max-warnings=0 .",
        "prettier-fix": "prettier --write .",
        "convert-schema": "node utils/convert-schema.js && prettier --write src/compiler/meta/types.ts",
        "demo": "node dist/mtasa-ts-build.js",
        "tstl": "tstl"
    },
    "bin": {
        "mtasa-utils-postbuild": "./utils/postbuild.js",
        "mtasa-ts-build": "./dist/mtasa-ts-build.js"
    },
    "files": [
        "dist/**/*",
        "*.schema.json"
    ],
    "devDependencies": {
        "@types/js-yaml": "^4.0.2",
        "@types/node": "^16.6.0",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "@typescript-eslint/parser": "^4.29.1",
        "eslint": "^7.32.0",
        "json-schema-to-typescript": "^10.1.4",
        "prettier": "^2.3.2",
        "ts-node": "^9.1.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.0.0"
    },
    "dependencies": {
        "fast-glob": "^3.2.7",
        "glob-escape": "^0.0.2",
        "js-yaml": "^4.1.0",
        "json5": "^2.2.0",
        "jsonschema": "^1.4.0",
        "typescript-to-lua": "^0.42.0",
        "xml-js": "^1.6.11"
    }
}
